<h2>Resend unlock instructions</h2>

<%= form_for resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post } do |form| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= form.label       :email %>
    <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <%= form.submit "Resend unlock instructions", class: "btn btn-primary" %>
<% end %>

<%= render "devise/shared/links" %>
