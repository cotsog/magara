<div class="row">
  <div class="col-12 col-md-12 col-lg-8 mx-auto">
    <h2>Forgot your password?</h2>

    <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post } do |form| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= form.label       :email %>
        <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <%= form.submit "Send me reset password instructions", class: "btn btn-block btn-primary" %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
