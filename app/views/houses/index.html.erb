<div class="d-flex justify-content-start mb-3">
  <div>
    <h2>Properties</h2>
  </div>
</div>
<div class="d-flex justify-content-start mb-3">
  <div><%= link_to "List Property", new_house_path, class: "btn btn-primary" %></div>
</div>

<div class="card-columns">
  <% @houses.each do |house| %>
    <div class="card">
      <div class="card-body">
        <p class="card-text">
          <b>Rent</b>: $ <%= house.rent.to_i %><br>
          <b>Deposit</b>: $ <%= house.deposit.to_i %>
        </p>
        <p class="card-text">
          <b>Address</b>: <br>
          <% if user_signed_in? %>
          <%= house.address.address_1 %> <%= house.address.address_2 %><br>
          <%= house.address.city %> <%= house.address.state %>, <%= house.address.zip_code %>
          <% else %>
          <%= house.address.city %> <%= house.address.state %>
          <% end %>
        </p>
        <%= link_to "Details", house_path(house), class: "btn btn-primary stretched-link" %>
      </div>
      <div class="card-footer">
        <small class="text-muted"><%= distance_of_time_in_words_to_now(house.created_at) %> ago created</small>
      </div>
    </div>
  <% end %>
</div>
